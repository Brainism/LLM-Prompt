(
echo # Git LFS patterns for large binary/artifact files (ASCII-only comments)
echo # Track model checkpoints and other large artifacts
echo *.pt filter=lfs diff=lfs merge=lfs -text
echo *.bin filter=lfs diff=lfs merge=lfs -text
echo *.ckpt filter=lfs diff=lfs merge=lfs -text
echo *.onnx filter=lfs diff=lfs merge=lfs -text
echo *.weights filter=lfs diff=lfs merge=lfs -text
echo *.h5 filter=lfs diff=lfs merge=lfs -text
echo *.pkl filter=lfs diff=lfs merge=lfs -text
echo *.tflite filter=lfs diff=lfs merge=lfs -text
echo *.tar filter=lfs diff=lfs merge=lfs -text
echo *.gz filter=lfs diff=lfs merge=lfs -text
echo *.7z filter=lfs diff=lfs merge=lfs -text
echo *.zip filter=lfs diff=lfs merge=lfs -text
echo # data files (consider tracking only large ones)
echo *.csv filter=lfs diff=lfs merge=lfs -text
echo *.parquet filter=lfs diff=lfs merge=lfs -text
echo *.feather filter=lfs diff=lfs merge=lfs -text
echo *.npy filter=lfs diff=lfs merge=lfs -text
echo *.npz filter=lfs diff=lfs merge=lfs -text
echo # images / binary assets
echo *.png filter=lfs diff=lfs merge=lfs -text
echo *.jpg filter=lfs diff=lfs merge=lfs -text
echo *.jpeg filter=lfs diff=lfs merge=lfs -text
echo *.webp filter=lfs diff=lfs merge=lfs -text
echo 
echo # Exclude virtualenv from attributes (prevent LFS filters being applied in .venv)
echo .venv/** -filter -diff -merge -text
) > .gitattributes
*.pt filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.ckpt filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
