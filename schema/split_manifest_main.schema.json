{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "split_manifest_main",
  "type": "object",
  "required": ["items"],
  "additionalProperties": false,
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id","input","reference","domain","lang",
          "len_bin","diff_bin","cluster_id","license"
        ],
        "properties": {
          "id":        {"type":"string","minLength":1},
          "input":     {"type":"string","minLength":1},
          "reference": {"type":"string","minLength":1},
          "domain":    {"type":"string","minLength":1},
          "lang":      {"type":"string","enum":["ko","en"]},
          "len_bin":   {"type":"string","enum":["short","medium","long"]},
          "diff_bin":  {"type":"string","enum":["easy","medium","hard"]},
          "cluster_id":{"type":"string","pattern":"^[A-Za-z0-9_\\-]+$"},
          "license":   {"type":"string","minLength":1}
        }
      }
    }
  }
}