{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "split_manifest_main",
  "description": "split_manifest_main: items 배열에 프롬프트 샘플을 담는 최상위 스키마",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "input",
          "reference",
          "domain",
          "lang",
          "len_bin",
          "diff_bin",
          "cluster_id",
          "license"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "예: ex-0001",
            "pattern": "^ex-\\d{4}$"
          },
          "input": {
            "type": "string",
            "minLength": 1,
            "description": "프롬프트 텍스트"
          },
          "reference": {
            "type": "string",
            "minLength": 1,
            "description": "정답/레퍼런스 텍스트"
          },
          "domain": {
            "type": "string",
            "minLength": 1,
            "description": "예: general, healthcare, technology, finance, education, policy 등"
          },
          "lang": {
            "type": "string",
            "enum": ["ko", "en", "etc"]
          },
          "len_bin": {
            "type": "string",
            "enum": ["short", "medium", "long"],
            "description": "길이 구간 태그"
          },
          "diff_bin": {
            "type": ["string", "null"],
            "enum": ["easy", "medium", "hard", null],
            "description": "난이도 태그(필요 시 null 허용)"
          },
          "cluster_id": {
            "type": "string",
            "description": "예: EX_CLUSTER_XXXX 또는 도메인 접두 포함",
            "pattern": "^[A-Z0-9_\\-]+$"
          },
          "license": {
            "type": "string",
            "minLength": 1,
            "description": "예: unknown, cc-by-4.0 등"
          },
          "prompt_hash": {
            "type": "string",
            "description": "SHA-256(hex) of input",
            "pattern": "^[0-9a-f]{64}$"
          },
          "n_chars": {
            "type": "integer",
            "minimum": 1,
            "description": "input 문자 수(길이 QA 및 len_bin 검증용)"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": { "len_bin": { "const": "short" } },
              "required": ["len_bin", "n_chars"]
            },
            "then": {
              "properties": {
                "n_chars": { "type": "integer", "minimum": 1, "maximum": 70 }
              }
            }
          },
          {
            "if": {
              "properties": { "len_bin": { "const": "medium" } },
              "required": ["len_bin", "n_chars"]
            },
            "then": {
              "properties": {
                "n_chars": { "type": "integer", "minimum": 71, "maximum": 160 }
              }
            }
          },
          {
            "if": {
              "properties": { "len_bin": { "const": "long" } },
              "required": ["len_bin", "n_chars"]
            },
            "then": {
              "properties": {
                "n_chars": { "type": "integer", "minimum": 161 }
              }
            }
          }
        ]
      }
    }
  },
  "required": ["items"],
  "additionalProperties": false
}
